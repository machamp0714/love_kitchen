<%= provide(:title, 'パスワード再設定') %>
<div class="sessionsLayout_bg">
  <div class="container sessionsLayout_container">
    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-8">
        <div class="sessionsLayoutBody">
          <h1 class="sessionsLayoutBody_title">パスワード再設定</h1>
          <hr>
          <p class="lead">新しいパスワードを入力してください。</p>
            <%= form_for(resource, as: resource_name, url: password_reset_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>
              <%= f.hidden_field :reset_password_token %>

              <div class="form-group">
                <%= f.password_field :password, autofocus: true, placeholder: '新しいパスワード', autocomplete: "new-password", class: 'form-control' %>
                <% if @minimum_password_length %>
                  <p class="password-lead">(<%= @minimum_password_length %>文字以上に設定してください)</p>
                <% end %>
              </div>

              <div class="form-group">
                <%= f.password_field :password_confirmation, placeholder: '確認用パスワード', autocomplete: "off", class: 'form-control' %>
              </div>

              <div class="actions">
                <%= f.submit "パスワードリセット", class: 'btn btn-default' %>
              </div>
            <% end %>
        </div>
      </div>
      <div class="col-sm-2"></div>
    </div>
  </div>
</div>