<div class="commentForm" id="comment-edit-<%= object.id %>">
    <%= form_for(object, remote: true) do |f| %>
        <div class="commentForm_header">
            <%= image_tag current_user.avatar.to_s, class: 'article-user-avatar' %>
            <div class="commentForm_headerLabel">コメントを編集する</div>
        </div>
        <div class="commentForm_body" id="comment-post">
            <%= f.text_area :content, placeholder: 'コメントを入力してください', class: 'form-control form-comment', id: 'edit-comment-form' %>
            <%= hidden_field_tag 'comment[article_id]', @article.id %>
        </div>
        <div class="commentForm_submit">
            <%= link_to 'キャンセル', cancel_comment_path, remote: true, class: 'btn btn-cancel' %>
            <%= f.submit '更新', class: 'btn btn-default btn-comment' %>
        </div>
    <% end %>
</div>