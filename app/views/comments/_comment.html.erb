<div class="comment" id="<%= 'comment' + "#{object.id}" %>" >
            <div class="commentHeader">
                <div class="commentHeader_creater">
                    <%= link_to object.user do %>
                        <%= image_tag object.user.avatar_url, class: 'article-user-avatar' %>
                    <% end %>
                    <div class="commentHeader_createrInfo">
                        <%= link_to object.user.name, object.user %>
                    </div>
                </div>
                <div class="commentHeader_metadata"> 
                    <time> <%= object.created_at.strftime('%Y年%m月%d日') %> </time>
                    <% if user_signed_in? %>
                        <% if comment_author?(object) %>
                            <div class="commentHeader_button">
                                <span class="commentHeader_editButton">
                                    <%= link_to '編集', edit_comment_path(object), remote: true %>
                                </span>
                                <span class="commentHeader_deleteButton">
                                    <%= link_to '削除', object, method: :delete, remote: true %>
                                </span>
                            </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
            <div class="commentBody">
                <div class="commentBody_content">
                    <%= object.content %>
                </div>
            </div>
        </div>