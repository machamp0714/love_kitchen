<% if user_signed_in? %>
<div class="homeLayoutBody">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <%= search_form_for @q, url: search_path do |f| %>
                    <div class="form-group">
                        <%= f.search_field :title_or_content_cont, placeholder: 'キーワードを入力してください', class: 'form-control' %>
                    </div>
                    <%= f.submit '検索', class: 'btn btn-default' %>
                <% end %>
            </div>
            <div class="col-sm-8">
                <div class="itemList">
                    <%= render 'articles/articles' %>
                </div>
                <%= paginate @articles %>
            </div>
        </div>
    </div>
</div>
<% else %>
<!-- Header -->
<div id="top">
    <div class="top-body">
        <div class="container">
            <div class="row">
                <div class="col-md-10 top-header">
                    <h1>Love <span class="brand-heading">Kitchen</span></h1>
                    <p class="top-text">料理好きな人の”こだわり”をシェア出来るサービスです</p>
                    <%= link_to '今すぐ始める！', signup_path, class: 'btn btn-default' %>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>