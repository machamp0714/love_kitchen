<% if user_signed_in? %>
<div class="homeLayoutBody">
    <div class="container" id="wrapper">
        <div class="row">
            <div class="col-sm-4">
                <h2 class="home-heading"> <i class="fas fa-utensils"></i> アイテム一覧</h2>
                <div class="search-form">
                    <%= render 'shared/search_form' %>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="itemList">
                    <%= render 'articles/articles', object: @articles %>
                </div>
                <%= paginate @articles %>
            </div>
        </div>
        <div class="row">
            <%= render 'shared/footer' %>
        </div>
    </div>
</div>
<% else %>
<!-- Header -->
<div id="top">
    <div class="top-body">
        <div class="container">
            <div class="row">
                <div class="col-md-10 margin-left">
                    <h1>Love <span class="brand-heading">Kitchen</span></h1>
                    <p class="top-text">料理好きな人の”こだわり”をシェア出来るサービスです</p>
                    <%= link_to '今すぐ始める！', signup_path, class: 'btn btn-default' %>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Index -->
<div id="index">
    <div class="container">
        <div class="section-title text-center center">
            <h2>記事を見る</h2>
            <hr>
        </div>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <%= render 'articles/articles', object: @articles %>
            </div>
            <div class="col-sm-2"></div>
        </div>
    </div>
</div>
<% end %>