<div class="likes-action" id="likable">
    <%= button_to current_user.likes.build, params: { article_id: @article.id }, remote: true, class: 'like-button likable' do %>
        <span class="fas fa-thumbs-up"></span>
        <span class="likes-count"> <%= @article.likes.count %> </span>
    <% end %>
</div>