<%= provide(:title, @user.name) %>
<div id="main">
    <div class="container userPage">
        <div class="row">
            <div class="col-md-3">
                <div class="profile-avatar">
                    <%= image_tag @user.avatar.to_s, size: '255x255' %>
                </div>
                <div class="profile-username">
                    <h3> <%= @user.name %> </h3>
                </div>
                <div class="profile-info">
                    <div class="profile-introduce">
                        <%= @user.introduce %>
                    </div>
                    <%= link_to 'プロフィールを編集する', setting_profile_path, class: 'edit-profile' %>
                </div>
            </div>
            <div class="col-md-9">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a href="#posted-articles" id="posted-articles-tab" data-toggle="tab" class="nav-link active" role="tab" aria-controls="posted-articles" aria-selected="true">投稿した記事</a>
                    </li>
                    <li class="nav-item">
                        <a href="#liked-articles" id="liked-articles-tab" data-toggle="tab" class="nav-link" role="tab" aria-controls="liked-articles" aria-selected="false">いいねした記事</a>
                    </li>
                </ul>
                <div class="tab-content mt-3" id="myTabContent">
                    <div class="tab-pane fade show active" id="posted-articles" role="tabpanel" aria-labelledby="posted-articles-tab">
                        <% @articles.each do |article| %>
                            <div class="tr-Item">
                                <%= link_to article.user, class: 'tr-Item_userImage' do %>
                                    <%= image_tag article.user.avatar_url %>
                                <% end %>
                                <div class="tr-Item_body">
                                    <%= link_to article.title, article, class: 'tr-Item_title' %>
                                    <div class="tr-Item_meta">
                                        <span>by <%= link_to article.user.name, article.user, class: 'tr-Item_author' %> </span>
                                        <time> <%= article.created_at.strftime('%Y年%m月%d日') %> </time>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <div class="tab-pane fade" id="liked-articles" role="tabpanel" aria-labelledby="liked-articles-tab">
                        いいねした記事
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>