<div id="main">
    <div class="container mypage">
        <div class="row">
            <div class="col-md-3">
                <div class="profile-avatar">
                    <%= image_tag @user.avatar.to_s, size: '255x255' %>
                </div>
                <div class="profile-username">
                    <h3> <%= @user.name %> </h3>
                </div>
                <div class="profile-info">
                    <div class="profile-introduce">
                        <%= @user.introduce %>
                    </div>
                    <%= link_to 'プロフィールを編集する', setting_profile_path, class: 'edit-profile' %>
                </div>
            </div>
            <div class="col-md-9">
                <% @articles.each do |article| %>
                    <%= link_to article.title, article %>
                <% end %>
            </div>
        </div>
    </div>
</div>